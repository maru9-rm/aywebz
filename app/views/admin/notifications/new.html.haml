




.container
  %ul
    - @notification.errors.full_messages.each do |message|
      %li= message
  = form_with(model: @notification, url: admin_notifications_path, local: true) do |f|
    %div
      = f.label :title, 'タイトル'
    %div
      = f.text_field :title, class: 'text'
    %div
      = f.label :content, '内容'
    %div
      = f.text_area :content
    = f.submit '保存', class: 'btn-primary'

  = link_to "キャンセル", admin_notifications_path
